pipeline {

    agent {
        dockerfile {
        filename 'docker/Dockerfile'
        }
    }
    stages {
        stage("build") {
            when {
                expression {
                    BRANCH_NAME == 'master'
                }
            }
            steps {
                sh '''source /opt/build.sh
                '''
            }
        }
        stage("test copying files") {
            steps {
                sh """
                docker run --name sample -d -u root docker-image:${env.BUILD_ID} 'touch cp $BUILD_DIR/src/pinetime-mcuboot-app-dfu-$PROJECT_VERSION.zip'
                docker cp sample:$BUILD_DIR/src/pinetime-mcuboot-app-dfu-$PROJECT_VERSION.zip .
                docker rm -f sample
                """
            }
        }

    }
}